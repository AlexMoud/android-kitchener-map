<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="225dp"
            android:padding="16dp"
            android:id="@+id/backToMenu"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/menu_item_about_the_application"
            android:textSize="@dimen/text_large"
            android:textAlignment="center"/>
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_medium"
                    android:padding="10dp"
                    android:text="@string/greek_about_paragraph_1"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_2"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_3"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_4"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_large"
                    android:padding="10dp"
                    android:text="@string/greek_about_heading_2"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_medium"
                    android:padding="10dp"
                    android:text="@string/greek_about_paragraph_5"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_6"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_6"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_7"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_8"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_9"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/greek_about_paragraph_10"/>

                </LinearLayout>

        </TableLayout>

    </ScrollView>

</LinearLayout>