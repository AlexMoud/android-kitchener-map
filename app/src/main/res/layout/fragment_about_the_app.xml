<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back"
            tools:layout_editor_absoluteX="11dp"
            tools:layout_editor_absoluteY="225dp"
            android:padding="16dp"
            android:id="@+id/backToMenu"/>

        <TextView
            android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/menu_item_about_the_application"
            android:textSize="@dimen/text_large"
            android:textAlignment="center"/>
    </RelativeLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_medium"
                    android:padding="10dp"
                    android:text="@string/about_paragraph_1"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_2"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_3"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_4"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_large"
                    android:padding="10dp"
                    android:text="@string/about_heading_2"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_medium"
                    android:padding="10dp"
                    android:text="@string/about_paragraph_5"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_6"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_6"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_7"/>

                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_8"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_9"/>
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_medium"
                        android:padding="10dp"
                        android:text="@string/about_paragraph_10"/>


                <ImageView
                        android:layout_marginTop="12dp"
                        android:id="@+id/logo_b"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/silvia_logo"
                        android:layout_gravity="center"/>

                <ImageView
                        android:layout_marginTop="20dp"
                        android:id="@+id/logo_a"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/harokopio_logo" />

                </LinearLayout>

        </TableLayout>

    </ScrollView>

</LinearLayout>